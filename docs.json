{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "CurrentClient Help Center",
  "colors": {
    "primary": "#3b82f6",
    "light": "#60a5fa",
    "dark": "#1d4ed8"
  },
  "favicon": "/favicon.ico",
  "fonts": {
    "family": "Airbnb Cereal",
    "weights": [
      {
        "weight": 300,
        "source": "https://static.currentclient.com/v1/fonts/AirbnbCerealLight.ttf",
        "format": "truetype"
      },
      {
        "weight": 400,
        "source": "https://static.currentclient.com/v1/fonts/AirbnbCerealBook.ttf",
        "format": "truetype"
      },
      {
        "weight": 500,
        "source": "https://static.currentclient.com/v1/fonts/AirbnbCerealMedium.ttf",
        "format": "truetype"
      },
      {
        "weight": 700,
        "source": "https://static.currentclient.com/v1/fonts/AirbnbCerealBold.ttf",
        "format": "truetype"
      },
      {
        "weight": 800,
        "source": "https://static.currentclient.com/v1/fonts/AirbnbCerealExtraBold.ttf",
        "format": "truetype"
      },
      {
        "weight": 900,
        "source": "https://static.currentclient.com/v1/fonts/AirbnbCerealBlack.ttf",
        "format": "truetype"
      }
    ]
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Welcome",
        "pages": ["index"]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["guides/getting-started/index", "guides/getting-started/signup", "guides/getting-started/install-apps"]
          },
          {
            "group": "Support",
            "pages": []
          }
        ]
      },
      {
        "tab": "API docs",
        "groups": [
          {
            "group": "API documentation",
            "pages": ["api/introduction"]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api/endpoint/get",
              "api/endpoint/create",
              "api/endpoint/delete",
              "api/endpoint/webhook"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/cc-full-black.png",
    "dark": "/logo/cc-full-white.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Install app",
        "href": "https://www.currentclient.com/downloads"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Login",
      "href": "https://app.currentclient.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/currentclient",
      "linkedin": "https://linkedin.com/company/currentclient/"
    }
  },
  "background": {
    "decoration": "gradient"
  }
}
